{% extends 'base.html.twig' %}

{% block body %}
    <section id="banner" class="books-banner">
        <h1 class="page-title">Liste des livres</h1>
    </section>

    <section id="books" class="container pad-v">
        <div class="d-none d-xl-block">
            <div class="row">
                {% for book in books %}
                    <div class="card col-xl-3">
                        <img src="{{ book.imageUrl }}" class="card-img-top" alt="{{ book.title }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ book.title }}</h5>
                            <p class="card-text">{{ book.catchphrase }}</p>
                        </div>
                        <div class="card-body">
                            <a href="#" class="card-link">En savoir plus</a>
                        </div>
                    </div>
                {% endfor %}
                
                {% if books|length % 3 == 1 %}
                    <div class="col-xl-3"></div>
                {% endif %}

                {% if books|length < 1 %}
                    <p class="col-xl-3">Aucun livre trouvé</p>
                {% endif %}
            </div>
        </div>
        <div class="d-block d-xl-none">
            <div class="row">
                {% for book in books %}
                    <div class="card col-5">
                        <div class="row g-0">
                          <div class="col-md-4">
                            <img src="" class="img-fluid rounded-start" alt="{{ book.title }}">
                          </div>
                          <div class="col-md-8">
                            <div class="card-body">
                              <h5 class="card-title">{{ book.title }}</h5>
                              <p class="card-text">{{ book.catchphrase }}</p>
                            </div>
                            <div class="card-body">
                                <a href="#" class="card-link">En savoir plus</a>
                            </div>
                          </div>
                        </div>
                      </div>
                {% endfor %}

                {% if books|length % 2 == 1 %}
                    <div class="col-5"></div>
                {% endif %}

                {% if books|length < 1 %}
                    <p class="col-xl-3">Aucun livre trouvé</p>
                {% endif %}
            </div>
        </div>
        
    </section>
{% endblock %}
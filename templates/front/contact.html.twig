{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block body %}
    <section id="contact-form" class="container pad-v">
        <div class="row">
            <form action="{{ path('contact') }}" method="post">
                <h1 class="h3 mb-3 font-weight-normal">Nous contacter</h1>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}

                <div class="form-group col-12">
                    {{ form_label(form.email, 'Email', { attr: { 'class': 'form-label' } }) }}
                    {{ form_widget(form.email, { attr: { 'class': 'form-control' } }) }}
                </div>
                <div class="form-group col-12">
                    {{ form_label(form.subject, 'Sujet', { attr: { 'class': 'form-label' } }) }}
                    {{ form_widget(form.subject, { attr: { 'class': 'form-control select2-multiple' } }) }}
                </div>
                <div class="form-group col-12">
                    {{ form_label(form.message, 'Email', { attr: { 'class': 'form-label' } }) }}
                    {{ form_widget(form.message, { attr: { 'class': 'form-control' } }) }}
                </div>
                {{ form_row(form._token) }}
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
        </div>
    </section>
{% endblock %}

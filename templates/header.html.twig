<header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">Bibliothèque</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'books_home' or app.request.get('_route') == 'book_details' %}active{% endif %}" href="{{ path('books_home') }}">Livres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'authors_home' or app.request.get('_route') == 'author_details' %}active{% endif %}" href="#">Auteurs</a>
                    </li>
                    

                    {% if is_granted("ROLE_LIBRARIAN") %}
                        <li class="nav-item">
                            <a class="nav-link {% if 'admin_' in app.request.attributes.get('_route') %}active{% endif %}" href="{{ path('admin_home') }}">Admin</a>
                        </li>
                    {% endif %}
                    {% if not app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>